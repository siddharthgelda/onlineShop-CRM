<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.Orders" table="Orders">
    <meta attribute="class-description">
			This class contains the employee detail. 
      </meta>
    <id column="Order_id" name="Order_id" type="int">
      <generator class="native">
      </generator>
    </id>
     
    <property column="order_price" name="order_price" type="string"/>
    <property column="order_date" name="order_date" type="string"/>
     <property column="delivery_date" name="delivery_date" type="string"/>
          <property column="discount" name="discount" type="string"/>
          <property column="coupon" name="coupon" type="string"/>
          <property column="product_name" name="product_name" type="string"/>
          <property column="order_no" name="order_no" type="string"/>
     
  </class>
</hibernate-mapping>